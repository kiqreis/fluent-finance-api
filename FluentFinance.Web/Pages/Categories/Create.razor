@page "/categories/add"
@inherits CreatCategoryPage

<PageTitle>Categories</PageTitle>

<MudText Typo="Typo.h3">Create a new category</MudText>

<MudPaper Class="pa-8 mt-4">
	<EditForm Model="@InputModel" OnInvalidSubmit="OnValidSubmitAsync">
		<DataAnnotationsValidator />

		<MudTextField Label="Title"
					  HelperText="Required field"
					  @bind-Value="InputModel.Title"
					  For="@(() => InputModel.Title)" />

		<MudTextField Label="Description"
					  Lines="5"
					  HelperText="Required field"
					  @bind-Value="InputModel.Description"
					  For="@(() => InputModel.Description)" />

		<MudButton ButtonType="ButtonType.Submit"
				   Variant="Variant.Filled"
				   Color="Color.Primary">
			Save category
		</MudButton>
	</EditForm>
</MudPaper>
